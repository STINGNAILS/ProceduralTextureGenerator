<UserControl x:Class="ProceduralTextureGenerator.SelectionParameter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProceduralTextureGenerator"
             mc:Ignorable="d" 
             d:DesignHeight="72" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="8"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="selectionParameterName" Style="{StaticResource ParameterNameLabelStyle}" Content="Selection Parameter Name" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

        <ComboBox x:Name="selectionParameterComboBox" Style="{StaticResource ParameterComboBoxStyle}" Grid.Row="1" Grid.Column="1"/>

        <Rectangle Style="{StaticResource ParameterSeparatorStyle}" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
