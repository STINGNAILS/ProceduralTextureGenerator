<Window x:Class="ProceduralTextureGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProceduralTextureGenerator"
        mc:Ignorable="d"
        Title="Procedural Texture Generator" Height="840" Width="1240" Closed="OnExit">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="469*"/>
            <RowDefinition Height="340*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <local:ObjectView x:Name="objectView" Grid.Column="0" Grid.RowSpan="2"/>
        <local:GraphView x:Name="graphView" Grid.Column="1" Grid.Row="0"/>
        <local:TextureView x:Name="textureView" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
